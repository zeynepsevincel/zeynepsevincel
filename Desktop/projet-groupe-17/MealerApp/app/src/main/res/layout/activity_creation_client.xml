<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorButtonNormal"
    android:baselineAligned="false"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="engineering.uottawa.mealerapp.CreationClient">

    <TextView
        android:id="@+id/adminIden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Client"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/identification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="IDENTIFICATION"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/mauvaiseEntree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mauvaises entrées. Veuillez réessayer."
        android:textColor="@android:color/holo_red_dark"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/prenomclient"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Prénom"
        android:inputType="textPersonName"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/nomclient"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Nom"
        android:inputType="textPersonName"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/courrielclient"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Adresse courriel"
        android:inputType="textEmailAddress"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/passwordclient"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Mot de passe du compte"
        android:inputType="textPassword"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/adresseclient"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Adresse"
        android:inputType="textPostalAddress"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/carte"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Numéro de carte crédit"
        android:inputType="number"
        android:textSize="11sp" />

    <Button
        android:id="@+id/connexionClient"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@color/colorPrimary"
        android:text="Connexion" />

</LinearLayout>
