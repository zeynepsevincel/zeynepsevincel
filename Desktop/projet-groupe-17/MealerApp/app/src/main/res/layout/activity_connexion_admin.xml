<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorButtonNormal"
    android:baselineAligned="false"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="engineering.uottawa.mealerapp.ConnexionAdmin">

    <TextView
        android:id="@+id/adminIden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Administrateur"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/identification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="IDENTIFICATION"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/mauvaiseEntree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mauvaises entrées. Veuillez réessayer."
        android:textColor="@android:color/holo_red_dark"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/username"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Veuiller entrer votre nom d'utilisateur"
        android:inputType="textPersonName"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Veuiller entrer votre mot de passe"
        android:inputType="textPassword"
        android:textSize="11sp" />

    <Button
        android:id="@+id/connexionA"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@color/colorPrimary"
        android:text="Connexion" />

    <TextView
        android:id="@+id/nomDutilisateur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Admin1"
        android:visibility="gone" />

    <TextView
        android:id="@+id/motDePasse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Livrable1"
        android:visibility="gone" />

</LinearLayout>

